<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TrainingHelperApp"
             x:Class="TrainingHelperApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#1E90FF</Color>
            <!-- Dodger Blue -->
            <Color x:Key="ButtonText">#FFFFFF</Color>
            <!-- White -->

            <!-- Default Button Style -->
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
                <Setter Property="TextColor" Value="{StaticResource ButtonText}" />
                <Setter Property="CornerRadius" Value="8" />
                <!-- Optional: Rounded Corners -->
                <Setter Property="FontSize" Value="16" />
                <!-- Optional: Font Size -->
                <Setter Property="Padding" Value="10,5" />
                <!-- Optional: Button Padding -->
            </Style>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
