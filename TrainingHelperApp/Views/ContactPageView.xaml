<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TrainingHelperApp.Views.ContactPageView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Contact Us"
    BackgroundColor="#f9f9f9">

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="20">

            <!-- Title -->
            <Label
                Text="ðŸ“¬ Contact Us"
                FontSize="30"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                TextColor="#333" />

            <Label
                Text="Weâ€™ll get back to you as soon as possible!"
                FontSize="16"
                HorizontalOptions="Center"
                TextColor="#666" />

            <!-- Subject -->
            <Label Text="Subject:" FontAttributes="Bold" TextColor="#444" />
            <Entry
                Placeholder="Enter your subject"
                Text="{Binding Subject}"
                BackgroundColor="White"
                TextColor="Black"
                HeightRequest="40"
                Margin="0,0,0,10" />

            <!-- Body -->
            <Label Text="Message:" FontAttributes="Bold" TextColor="#444" />
            <Editor
                Placeholder="Type your message here..."
                Text="{Binding Body}"
                BackgroundColor="White"
                TextColor="Black"
                AutoSize="TextChanges"
                HeightRequest="120"
                Margin="0,0,0,10" />

            <!-- Status Message -->
            <Label
                Text="{Binding StatusMessage}"
                TextColor="Crimson"
                FontAttributes="Italic"
                FontSize="14"
                HorizontalOptions="Center" />

            <!-- Send Button -->
            <Button
                Text="Send Message"
                Command="{Binding SendEmailCommand}"
                IsEnabled="{Binding NotInServerCall}"
                BackgroundColor="#2196F3"
                TextColor="White"
                FontSize="16"
                HeightRequest="45"
                Margin="0,10,0,0" />

            <!-- Loading Indicator -->
            <ActivityIndicator
                IsRunning="{Binding InServerCall}"
                Color="#E91E63"
                HeightRequest="40"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
