<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TrainingHelperApp.Views.ProfileView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Profile">
    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <VerticalStackLayout Grid.Row="0" Padding="10">
                <Label
                    FontAttributes="Bold"
                    FontSize="Large"
                    HorizontalOptions="Center"
                    VerticalOptions="Center" />
                <!--  Photo  -->
                <Frame
                    Margin="10"
                    Padding="5"
                    BorderColor="Black">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image
                            x:Name="theImageBug"
                            HeightRequest="150"
                            Source="{Binding PhotoURL}" />
                        <Label
                            Grid.Row="1"
                            HorizontalOptions="Center"
                            Text="Click Here To Upload Photo!"
                            TextColor="Blue"
                            VerticalOptions="End">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding UploadPhotoCommand}" />
                            </Label.GestureRecognizers>
                        </Label>
                    </Grid>
                </Frame>

                <!--  First Name  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Style="{StaticResource labelNameStyle}"
                        Text="First Name" />
                    <Label
                        Grid.Column="1"
                        IsVisible="{Binding ShowNameError}"
                        Style="{StaticResource labelErrorStyle}"
                        Text="{Binding NameError}"
                        TextColor="Red" />
                </Grid>
                <Entry
                    Placeholder="Type First Name"
                    Style="{StaticResource entryStyle}"
                    Text="{Binding Name}" />

                <!--  Last Name  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Style="{StaticResource labelNameStyle}"
                        Text="Last Name" />
                    <Label
                        Grid.Column="1"
                        IsVisible="{Binding ShowLastNameError}"
                        Style="{StaticResource labelErrorStyle}"
                        Text="{Binding LastNameError}"
                        TextColor="Red" />
                </Grid>
                <Entry
                    Placeholder="Type Last Name"
                    Style="{StaticResource entryStyle}"
                    Text="{Binding LastName}" />

                <!--  Email  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Style="{StaticResource labelNameStyle}"
                        Text="Email" />
                    <Label
                        Grid.Column="1"
                        IsVisible="{Binding ShowEmailError}"
                        Style="{StaticResource labelErrorStyle}"
                        Text="{Binding EmailError}"
                        TextColor="Red" />
                </Grid>
                <Entry
                    Placeholder="Type Email"
                    Style="{StaticResource entryStyle}"
                    Text="{Binding Email}" />

                <!--  Phone  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Style="{StaticResource labelNameStyle}"
                        Text="Phone" />
                    <Label
                        Grid.Column="1"
                        IsVisible="{Binding ShowPhoneError}"
                        Style="{StaticResource labelErrorStyle}"
                        Text="{Binding PhoneError}"
                        TextColor="Red" />
                </Grid>
                <Entry
                    Placeholder="Type Phone"
                    Style="{StaticResource entryStyle}"
                    Text="{Binding Phone}" />

                <!--  Id  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Style="{StaticResource labelNameStyle}"
                        Text="ID" 
                        />
                    <Label
                        Grid.Column="1"
                        IsVisible="{Binding ShowIdError}"
                        Style="{StaticResource labelErrorStyle}"
                        Text="{Binding IdError}"
                        TextColor="Red" />
                </Grid>
                <Entry
                    Placeholder="Type ID"
                    Style="{StaticResource entryStyle}"
                    Text="{Binding Id}"
                    IsReadOnly="True"/>

                <!--  Password  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Style="{StaticResource labelNameStyle}"
                        Text="Password" />
                    <Label
                        Grid.Column="1"
                        IsVisible="{Binding ShowPasswordError}"
                        Style="{StaticResource labelErrorStyle}"
                        Text="{Binding PasswordError}"
                        TextColor="Red" />
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="40" />
                    </Grid.ColumnDefinitions>
                    <Entry
                        Grid.Column="0"
                        IsPassword="True"
                        Placeholder="Type Password"
                        Style="{StaticResource entryStyle}"
                        Text="{Binding Password}" />
                    <!--<ImageButton Grid.Column="1" HeightRequest="25" Source="passwordeye.jpg" Command="{Binding ShowPasswordCommand}" />-->
                </Grid>

                <!--  Save Button  -->
                <Button
                    Command="{Binding SaveCommand}"
                    IsEnabled="{Binding NotInServerCall}"
                    Text="Save" />
            </VerticalStackLayout>

            <!--  Centered ActivityIndicator  -->
            <ActivityIndicator
                Grid.Row="1"
                HorizontalOptions="Center"
                IsRunning="{Binding InServerCall}"
                VerticalOptions="Center"
                Color="Red" />
        </Grid>
    </ScrollView>
</ContentPage>
